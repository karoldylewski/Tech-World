<aura:component description="TW_StarRating">
    <aura:registerEvent name="RatingChanged" type="c:TW_RatingChange"/>
    <aura:attribute name='value' type='Integer' default='0' />
    <aura:attribute name='readonly' type='boolean' default='false' />
    <ltng:require styles="{!$Resource.fivestar2 + '/rating.css'}"
                  scripts="{!$Resource.fivestar2 + '/rating.js'}"
                  afterScriptsLoaded="{!c.afterScriptsLoaded}" />
    <aura:handler name='change' value="{!v.value}" action="{!c.onValueChange}" />

    <ul aura:id='ratingArea' class="{!v.readonly ? 'readonly c-rating' : 'c-rating' }" />
</aura:component>
