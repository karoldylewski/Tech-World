<aura:component description="TW_AccountEdit">
    <aura:attribute name="item" type="Account"/>
    <aura:handler name="onSaveSuccess" event="force:recordSaveSuccess" action="{!c.updateAccountChangess}"/>


    <lightning:recordEditForm aura:id="recordViewForm"
                              recordId="{!v.item.Id}"
                              objectApiName="Account">
        <lightning:messages />
        <lightning:inputField fieldName="Name"/>
        <lightning:inputField fieldName="Website"/>
        <lightning:button aura:id="submit" type="submit" label="Update record" class="slds-m-top_medium" />
    </lightning:recordEditForm>



