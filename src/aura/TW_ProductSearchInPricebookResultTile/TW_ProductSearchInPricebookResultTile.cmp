<aura:component description="TW_ProductSearchInPricebookResultTile">
    <aura:registerEvent name="addProductToList" type="c:TW_ProductsSelectedForPricebook"/>
    <aura:attribute name="item" type="Object"/>

    <lightning:layout>
        <lightning:layoutItem size="1">

        </lightning:layoutItem>
        <lightning:layoutItem size="3">
                {!v.item.product.Name}
        </lightning:layoutItem>
        <lightning:layoutItem size="3">
            <ui:outputCurrency value="{!v.item.originalPrice}"/>
        </lightning:layoutItem>
        <lightning:layoutItem size="3">
            <ui:outputCurrency value="{!v.item.currentPrice}"/>
        </lightning:layoutItem>
        <lightning:layoutItem size="2">
             <span>
                <a onclick="{!c.addItemToList}">{!$Label.c.TW_add_product}</a>
            </span>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>